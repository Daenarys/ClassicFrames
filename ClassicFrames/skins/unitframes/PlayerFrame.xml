<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
UI_shared.xsd">
	<Script file="PlayerFrame.lua"/>
	<Button name="CfPlayerFrame" parent="PlayerFrame">
		<Size x="232" y="100"/>
		<Anchors>
			<Anchor point="TOPLEFT" x="-19" y="-4"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentTotalAbsorbBar" inherits="CfTotalAbsorbBarTemplate"/>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="1">
				<Texture name="$parentTotalAbsorbBarOverlay" inherits="CfTotalAbsorbBarOverlayTemplate"/>
			</Layer>
		</Layers>
		<Frames>
			<Frame setAllPoints="true">
				<Frames>
					<Frame setAllPoints="true">
						<Layers>
							<Layer level="BACKGROUND">
								<Texture name="$parentMyHealPredictionBar" inherits="CfMyHealPredictionBarTemplate"/>
								<Texture name="$parentOtherHealPredictionBar" inherits="CfOtherHealPredictionBarTemplate"/>
								<Texture name="$parentHealAbsorbBar" inherits="CfHealAbsorbBarTemplate"/>
								<Texture name="$parentHealAbsorbBarLeftShadow" inherits="CfHealAbsorbBarLeftShadowTemplate"/>
								<Texture name="$parentHealAbsorbBarRightShadow" inherits="CfHealAbsorbBarRightShadowTemplate"/>
							</Layer>
							<Layer level="BORDER">
								<FontString name="PlayerFrameHealthBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" x="50" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="PlayerFrameHealthBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" x="110" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="PlayerFrameHealthBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" x="-8" y="3"/>
									</Anchors>
								</FontString>
								<FontString name="PlayerFrameManaBarText" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="CENTER" x="50" y="-8"/>
									</Anchors>
								</FontString>
								<FontString name="PlayerFrameManaBarTextLeft" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="LEFT" x="110" y="-8"/>
									</Anchors>
								</FontString>
								<FontString name="PlayerFrameManaBarTextRight" inherits="TextStatusBarText">
									<Anchors>
										<Anchor point="RIGHT" x="-8" y="-8"/>
									</Anchors>
								</FontString>
							</Layer>
							<Layer level="ARTWORK" textureSubLevel="1">
								<Texture name="$parentOverAbsorbGlow" inherits="CfOverAbsorbGlowTemplate"/>
								<Texture name="$parentOverHealAbsorbGlow" inherits="CfOverHealAbsorbGlowTemplate"/>
							</Layer>
						</Layers>
					</Frame>
				</Frames>
			</Frame>
			<StatusBar name="PlayerFrameHealthBar" inherits="TextStatusBar">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="106" y="-41"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_PLAYER";
					</OnLoad>
					<OnValueChanged function="CfUnitFrameHealthBar_OnValueChanged"/>
					<OnSizeChanged>
						CfUnitFrameHealPredictionBars_UpdateSize(self:GetParent());
					</OnSizeChanged>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
			</StatusBar>
			<StatusBar name="PlayerFrameManaBar" inherits="TextStatusBar">
				<Size x="119" y="12"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="106" y="-52"/>
				</Anchors>
				<Scripts>
					<OnLoad>
						TextStatusBar_Initialize(self);
						self.textLockable = 1;
						self.cvar = "statusText";
						self.cvarLabel = "STATUS_TEXT_PLAYER";
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0" b="1.0"/>
				<Frames>
					<Frame parentKey="FeedbackFrame" setAllPoints="true" useParentLevel="true" inherits="BuilderSpenderFrame"/>
					<Frame parentKey="FullPowerFrame" inherits="FullResourcePulseFrame">
						<Size x="119" y="12"/>
						<Anchors>
							<Anchor point="TOPRIGHT"/>
						</Anchors>
					</Frame>
				</Frames>
			</StatusBar>
		</Frames>
		<Scripts>
			<OnLoad function="CfPlayerFrame_OnLoad"/>
			<OnEvent function="CfPlayerFrame_OnEvent"/>
		</Scripts>
	</Button>
</Ui>